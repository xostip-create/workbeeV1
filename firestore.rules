
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isJobOwner(jobId) {
      return isSignedIn() && get(/databases/$(database)/documents/jobs/$(jobId)).data.customerId == request.auth.uid;
    }

    function isChatParticipant(jobId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(jobId)).data.participants;
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      match /reviews/{reviewId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.reviewerId == request.auth.uid;
      }
    }

    match /jobs/{jobId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.customerId == request.auth.uid || isAdmin());

      match /applications/{applicationId} {
        allow read: if isSignedIn() && (isJobOwner(jobId) || resource.data.applicantId == request.auth.uid || isAdmin());
        allow create: if isSignedIn();
      }

      match /proposals/{proposalId} {
        allow read: if isSignedIn() && (isJobOwner(jobId) || request.auth.uid == resource.data.proposerId || request.auth.uid == resource.data.recipientId || isAdmin());
        allow create: if isSignedIn();
        allow update: if isSignedIn() && (request.auth.uid == resource.data.proposerId || request.auth.uid == resource.data.recipientId || isAdmin());
      }
    }

    match /chatRooms/{jobId} {
      allow get: if isSignedIn() && (request.auth.uid in resource.data.participants || request.auth.uid in request.resource.data.participants || isAdmin());
      allow create: if isSignedIn();
      
      match /messages/{messageId} {
        allow read: if isChatParticipant(jobId) || isAdmin();
        allow create: if isChatParticipant(jobId);
      }
    }

    match /payments/{paymentId} {
      allow read: if isSignedIn() && (resource.data.customerId == request.auth.uid || isJobOwner(resource.data.jobId) || isAdmin());
      allow create: if isSignedIn();
    }
  }
}
