
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isJobOwner(jobId) {
      return isSignedIn() && get(/databases/$(database)/documents/jobs/$(jobId)).data.customerId == request.auth.uid;
    }

    function isChatParticipant(jobId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(jobId)).data.participants;
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    match /jobs/{jobId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.customerId == request.auth.uid;

      match /applications/{applicationId} {
        allow read: if isSignedIn() && (isJobOwner(jobId) || resource.data.applicantId == request.auth.uid);
        allow create: if isSignedIn();
      }
    }

    match /chatRooms/{jobId} {
      allow get: if isSignedIn() && (request.auth.uid in resource.data.participants || request.auth.uid in request.resource.data.participants);
      allow create: if isSignedIn();
      
      match /messages/{messageId} {
        allow read: if isChatParticipant(jobId);
        allow create: if isChatParticipant(jobId);
      }
    }
  }
}
