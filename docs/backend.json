
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile and account information in the E&F WorkBee application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, matching their Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "The full name of the user."
        },
        "accountType": {
          "type": "string",
          "description": "The type of user account: 'Worker' or 'Customer'.",
          "enum": [
            "Worker",
            "Customer"
          ]
        },
        "photoUrl": {
          "type": "string",
          "description": "URL to the user's profile photo."
        },
        "isAvailable": {
          "type": "boolean",
          "description": "Whether the worker is currently available for jobs."
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of skills or service categories the user provides."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the profile was created."
        }
      },
      "required": [
        "id",
        "email",
        "name",
        "accountType"
      ]
    },
    "Job": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Job",
      "type": "object",
      "description": "Represents a job posting in the system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the job."
        },
        "title": {
          "type": "string",
          "description": "The title of the job."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the job."
        },
        "customerId": {
          "type": "string",
          "description": "The UID of the user who posted the job."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the job was created."
        }
      },
      "required": [
        "title",
        "description",
        "customerId"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/jobs/{jobId}": {
      "schema": {
        "$ref": "#/backend/entities/Job"
      },
      "description": "Stores job postings."
    }
  }
}
